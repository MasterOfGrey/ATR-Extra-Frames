<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<!-- Adjust ATR Techs for Extra Frames -->
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Android Tiers Reforged</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<!-- ATR_MilitaryBiomimetics -->
				<li Class="PatchOperationReplace">
					<xpath>Defs/ResearchProjectDef[defName = "ATR_MilitaryBiomimetics"]/researchViewX</xpath>
					<value><researchViewX>6.00</researchViewX></value></li>
				<li Class="PatchOperationReplace">
					<xpath>Defs/ResearchProjectDef[defName = "ATR_MilitaryBiomimetics"]/researchViewY</xpath>
					<value><researchViewY>3.20</researchViewY></value></li>
				<!-- <li Class="PatchOperationReplace">
					<xpath>Defs/ResearchProjectDef[defName = "ATR_MilitaryBiomimetics"]/prerequisites</xpath>
					<value><prerequisites><li>ATR_UtilityBiomimetics</li><li>ATR_MilitaryFrameworks</li></prerequisites></value></li> -->
			</operations>
		</match>
	</Operation>

	<!-- Adjust Industrial Automatons Techs for Extra Frames -->
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>ATR Industrial Automatons - Android Tiers</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<!-- New Techs -->
				<li Class="PatchOperationAdd">
					<xpath>Defs/ResearchProjectDef[defName = "ATR_MilitaryFrameworks"]</xpath>
					<value>
						<ResearchProjectDef>
							<defName>ATR_MilitaryFrameworks</defName>
							<label>Military frameworks</label>
							<tab>ATR_MechResearch</tab>
							<description>Application of advanced ingredients, such as luciferium, to otherwise simple combat-improving framework enhancements allows for truly superior outcomes to be achieved in military applications.</description>
							<baseCost>1200</baseCost>
							<techLevel>Industrial</techLevel>
							<prerequisites>
								<li>ATR_MechanicalFrameworks</li>
								<li>ATR_MechanicalStimulators</li>
							</prerequisites>
							<researchViewX>5</researchViewX>
							<researchViewY>2.3</researchViewY>
						</ResearchProjectDef>
					</value></li>
				<li Class="PatchOperationAdd">
					<xpath>Defs/ResearchProjectDef[defName = "ATR_AdvancedIndustrialFrames"]</xpath>
					<value>
						<ResearchProjectDef>
							<defName>ATR_AdvancedIndustrialFrames</defName>
							<label>Advanced industrial frames</label>
							<tab>ATR_MechResearch</tab>
							<description>Advanced societies demand enduring performance from their mindless industrial servants. No weakness can be demonstrated in front of potential investors.</description>
							<baseCost>4000</baseCost>
							<techLevel>Spacer</techLevel>
							<prerequisites>
								<li>ATR_IndustrialUtilityFrameworks</li>
							</prerequisites>
							<researchViewX>7</researchViewX>
							<researchViewY>0</researchViewY>
						</ResearchProjectDef>
					</value></li>
				
				<!-- ATR_MilitaryBiomimetics -->
				<li Class="PatchOperationReplace">
					<xpath>Defs/ResearchProjectDef[defName = "ATR_MilitaryBiomimetics"]/researchViewX</xpath>
					<value><researchViewX>6.00</researchViewX></value></li>
				<li Class="PatchOperationReplace">
					<xpath>Defs/ResearchProjectDef[defName = "ATR_MilitaryBiomimetics"]/researchViewY</xpath>
					<value><researchViewY>0.30</researchViewY></value></li>
				<li Class="PatchOperationReplace">
					<xpath>Defs/ResearchProjectDef[defName = "ATR_MilitaryBiomimetics"]/prerequisites</xpath>
					<value><prerequisites><li>ATR_UtilityBiomimetics</li><li>ATR_MilitaryFrameworks</li></prerequisites></value></li>

			</operations>
		</match>
	</Operation>
    
</Patch>